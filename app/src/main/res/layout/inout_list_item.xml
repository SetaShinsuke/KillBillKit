<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_height_default"
              android:clickable="true"
              android:focusable="true"
              android:paddingLeft="@dimen/main_padding"
              android:paddingRight="@dimen/main_padding"
    >

    <com.seta.setakits.views.RadiusLayout
        android:id="@+id/cover"
        android:layout_width="@dimen/fab_size_mini"
        android:layout_height="@dimen/fab_size_mini"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@color/azusa_color"
        app:layout_radius="@dimen/fab_size_mini"
        >

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size"
            tools:text="呵呵"
            />
    </com.seta.setakits.views.RadiusLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cover"
        android:layout_marginLeft="@dimen/main_padding"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/leave_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_subhead"
            tools:text="某某某的请假"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            tools:text="2017-03-14"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:text="-2333"
        android:textColor="@color/azusa_color"
        android:textSize="@dimen/text_size"
        />
</RelativeLayout>